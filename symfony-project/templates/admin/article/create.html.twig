{% extends 'base.html.twig' %}

{% block title %}{{ 'title.create_article'|trans }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ 'title.create_article'|trans }}</h1>

        {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save" aria-hidden="true"></i> {{ 'action.save'|trans }}
            </button>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block footer_script %}
    {{ parent() }}
    <script src="{{ asset('validator.js') }}"></script>
    <script src="{{ asset('bootstrap_file_field.js') }}"></script>
{% endblock %}
