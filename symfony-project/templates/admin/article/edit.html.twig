{% extends 'base.html.twig' %}

{% block title %}{{ 'title.edit_article'|trans }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ 'title.edit_article'|trans }}</h1>
        {{ form_start(form) }}
        {% if form.vars.data.imageFilename %}
            <a href="{{ uploaded_asset(form.vars.data.imagePath) }}" target="_blank">
                <img src="{{ form.vars.data.imagePath | imagine_filter('article_thumbnail_small') }}" alt="article image" height="100">
            </a>
        {% endif %}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save" aria-hidden="true"></i> {{ 'action.edit'|trans }}
            </button>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block footer_script %}
    {{ parent() }}
    <script src="{{ asset('validator.js') }}"></script>
    <script src="{{ asset('bootstrap_file_field.js') }}"></script>
{% endblock %}
