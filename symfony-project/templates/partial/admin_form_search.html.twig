<form>
    <div class="form-row">
        <div class="input-group mb-3">
            <input type="text"
                    name="q"
                    class="form-control"
                    placeholder="Найти..."
                    value="{{ app.request.query.get('q') }}"
            >
            <div class="input-group-append">
                <button type="submit" class="btn btn-outline-secondary"><i class="fa fa-search"></i></button>
            </div>
        </div>
    </div>
    <div class="form-row">
    {% if app.request.get('_route') != 'app_admin_articles' %}
        <div class="form-group col-11">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="showDeleted" {% if app.request.query.has('showDeleted') %} checked {% endif %}>
                <label class="form-check-label">Показать удаленные</label>
            </div>
        </div>
    {% endif %}
        <div class="form-group col-1">
                <select class="custom-select mr-sm-2" name="itemsPerPage">
                    <option selected>{{ app.request.query.get('itemsPerPage') ?? '20' }}</option>
                    <option value="10">10</option>
                    <option value="20">20</option>
                    <option value="50">50</option>
                </select>
        </div>
    </div>
</form>
