{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href=" {{ asset('css/signin.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">

            {% if error %}
                <div class="col-12">
                    <div class="alert alert-danger" role="alert">
                        {{ error.messageKey|trans(error.messageDate, 'security') }}
                    </div>
                </div>
            {% endif %}
            {% form_theme form 'form/password_theme.html.twig' %}
            <div class="col-sm-12">
                        <h1 class="h3 mb-3 font-weight-normal text-center">Регистрация</h1>
                        {{ form(form, {attr: {class: 'form-signin'}}) }}
            </div>


        </div>
    </div>

{% endblock %}
