{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href=" {{ asset('css/signin.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">

            {% if error %}
                <div class="col-12">
                    <div class="alert alert-danger" role="alert">
                        {{ error.messageKey|trans(error.messageDate, 'security') }}
                    </div>
                </div>
            {% endif %}

            <div class="col-sm-12">
                {# <div class="form-signin"> #}
                {{ form_start(form, {
                    attr: { class: 'form-signin' }
                }) }}
                    {{ form_widget(form) }}
                    <button type="submit" class="btn btn-primary form-control">
                        Зарегистрироваться
                    </button>
                {{ form_end(form) }}
                {# </div> #}
            </div>

        </div>
    </div>

{% endblock %}
